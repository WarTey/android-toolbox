<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgContact"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:contentDescription="@string/logo_contact" />

    <TextView
        android:id="@+id/nameContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Nom :"
        app:layout_constraintBottom_toTopOf="@id/emailContact"
        app:layout_constraintStart_toEndOf="@id/imgContact"
        app:layout_constraintTop_toBottomOf="@id/numberContact" />

    <TextView
        android:id="@+id/numberContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="NumÃ©ro :"
        app:layout_constraintStart_toEndOf="@id/imgContact"
        app:layout_constraintTop_toTopOf="@id/imgContact" />

    <TextView
        android:id="@+id/emailContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="Email :"
        app:layout_constraintBottom_toBottomOf="@id/imgContact"
        app:layout_constraintStart_toEndOf="@id/imgContact" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@id/nameContact"
        app:layout_constraintStart_toEndOf="@id/numberContact"
        app:layout_constraintTop_toTopOf="@id/numberContact" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/nameContact"
        app:layout_constraintStart_toEndOf="@id/nameContact"
        app:layout_constraintTop_toTopOf="@id/nameContact" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/emailContact"
        app:layout_constraintStart_toEndOf="@id/emailContact"
        app:layout_constraintTop_toBottomOf="@id/nameContact" />

</androidx.constraintlayout.widget.ConstraintLayout>